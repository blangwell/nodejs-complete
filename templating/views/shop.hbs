  <main>
    <h1 class="page-heading">My Products</h1>
    <p class="page-copy">List of all products:</p>

    {{#if hasProducts }}  

      <div class="grid">
        {{#each prods}}
          <article class="card product-item">
            <header class="card__header">
              <h1 class="product__title">{{ this.title }}</h1>
            </header>
            <div class="card__image">
              <img src="https://www.asme.org/getmedia/c2c8ea5a-b690-4ba7-92bb-34bd1432862b/book_guide_hero_books.png?width=300&height=315&ext=.png" alt="Some Books">
            </div>
            <div class="card__content">
              <h2 class="product__price">$10</h2>
              <p class="product__description">Lorem ipsum dolor sit amet consectetur adipisicing elit. Adipisci odio autem aspernatur? Asperiores, illo, ab in officia iusto repellendus nostrum distinctio maiores, eaque dolorum possimus pariatur repudiandae minus eius tenetur?</p>
            </div>
            <div class="card__action">
              <button class="btn">Add to Cart</button>
            </div>
          </article>
        {{/each}}
      </div>

      {{ else }}
        <h1>No Products Currently</h1>
        
      {{/if}}

  </main>
</body>
</html>