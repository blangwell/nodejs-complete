<%- include('../includes/head.ejs') %> 
<link rel="stylesheet" href="/css/product.css">
</head>
<body>
<%- include('../includes/navigation.ejs') %> 
  <main>
    <% if (prods.length > 0) { %>
    <h1 class="page-heading">My Products</h1>
      <p class="page-copy">List of all products:</p>
        <div class="grid">
          <% prods.forEach(p => { %>
            <article class="card product-item">
              <header class="card__header">
                <h1 class="product__title"><%= p.title %> </h1>
              </header>
              <div class="card__image">
                <img src="<%= p.imageUrl %>" alt="Product Image">
              </div>
              <div class="card__content">
                <h2 class="product__price">$<%= p.price %></h2>
                <p class="product__description"><%= p.description %></p>
              </div>
              <div class="card__action">
                <form action="/add-to-cart" method="POST">
                  <button class="btn" type="submit">Add to Cart</button>
                </form>
              </div>
            </article>
          <% }); %>
        </div>
    <% } else { %>
      <h1>No Products Found</h1>
    <% } %> 
  </main>
<%- include('../includes/end.ejs') %> 